<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f5"
     >
     <LinearLayout 
          android:id = "@+id/login_top_bg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/login_bg">
<FrameLayout 
    android:id="@+id/login_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/top_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/list_top_bg"/>
    <ImageView 
            android:id="@+id/top_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_return_selector"/>
           <TextView
            android:id="@+id/top_return_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:gravity="center_vertical|left"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_gravity="left"/>
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="登录"
        android:textSize="16sp"
        android:textColor="#ffffff"/>
</FrameLayout>
   
<FrameLayout 
    android:id="@+id/login_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <!--   <ImageView 
        android:id="@+id/login_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_bg"/> -->
   <!--  <ImageView 
           android:id="@+id/user_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_editbg"/>
     <ImageView 
           android:id="@+id/pwd_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_editbg"/>--> 
     <LinearLayout 
            android:id="@+id/user_bg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/login_editbg">
          <TextView 
        android:id="@+id/username_label"
        android:layout_width="wrap_content"     
        android:text="账户"
          android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"/>
           <EditText 
        android:id="@+id/username_edit"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:textColorHint="#a4a4a4"
           android:textSize="15sp"
           android:background="#00ffffff"
        android:hint="您的用户名"/>
     </LinearLayout>
      <LinearLayout 
           android:id="@+id/pwd_bg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/login_editbg">
         <TextView 
        android:id="@+id/pwd_label"
        android:layout_width="wrap_content"
        android:text="密码"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
         android:gravity="center_vertical"
        android:layout_height="match_parent"/>
          <EditText 
        android:id="@+id/pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:gravity="center_vertical"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
         android:textSize="15sp"
        android:textColorHint="#a4a4a4"
        android:background="#00ffffff"
        android:hint="您的登陆密码"/>
     </LinearLayout>

    <TextView 
        android:id="@+id/login_post"
        android:layout_width="wrap_content"
        android:text="登录"
         android:textSize="15sp"
        android:textColor="#604646"
        android:gravity="center"
        android:background="@drawable/login_buttonbg"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/jumptoreg"
        android:layout_width="wrap_content"
        android:text="注册"
            android:textSize="15sp"
        android:textColor="#604646"
        android:gravity="center"
         android:background="@drawable/login_buttonbg"
        android:layout_height="wrap_content"/>   
</FrameLayout>


<FrameLayout 
    android:id="@+id/reg_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">
   <!--  <ImageView 
        android:id="@+id/reg_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_bg"/> -->
   <!--  <ImageView 
           android:id="@+id/user_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_editbg"/>
     <ImageView 
           android:id="@+id/pwd_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_editbg"/>--> 
     <LinearLayout 
            android:id="@+id/reg_user_bg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/login_editbg">
          <TextView 
        android:id="@+id/reg_username_label"
        android:layout_width="wrap_content"     
        android:text="账户"
          android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"/>
           <EditText 
        android:id="@+id/reg_username_edit"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:textColorHint="#a4a4a4"
           android:textSize="15sp"
           android:background="#00ffffff"
        android:hint="6到14位的中英文"/>
     </LinearLayout>
      <LinearLayout 
           android:id="@+id/reg_pwd_bg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/login_editbg">
         <TextView 
        android:id="@+id/reg_pwd_label"
        android:layout_width="wrap_content"
        android:text="密码"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
         android:gravity="center_vertical"
        android:layout_height="match_parent"/>
          <EditText 
        android:id="@+id/reg_pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:gravity="center_vertical"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
         android:textSize="15sp"
        android:textColorHint="#a4a4a4"
        android:background="#00ffffff"
        android:hint="6到14位中英文"/>
     </LinearLayout>

    <!--  <TextView 
        android:id="@+id/return_login"
        android:layout_width="wrap_content"
        android:text="登录"
         android:textSize="15sp"
        android:textColor="#604646"
        android:gravity="center"
        android:background="@drawable/login_buttonbg"
        android:layout_height="wrap_content"/>-->
        <ImageView
            android:id="@+id/reg_pwd_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_hidepwd"/>
    <TextView 
        android:id="@+id/reg_post"
        android:layout_width="wrap_content"
        android:text="确定"
            android:textSize="15sp"
        android:textColor="#604646"
        android:gravity="center"
         android:background="@drawable/login_buttonbg"
        android:layout_height="wrap_content"/>   
</FrameLayout>
</LinearLayout>

   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/main_top_wave">
       <!--   #f8f5f2"-->
        <TextView 
            android:id="@+id/order_praise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="喜欢"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/main_category_txtbg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"/>
          <TextView 
                android:id="@+id/order_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="评价"
            android:gravity="center"
            android:textColor="#604646"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"/>
    </LinearLayout>
      <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f8f8f6"
        android:layout_gravity="center"
        android:flipInterval="30"/>
    <!-- <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_viewpager_collect"
        android:scaleType="centerInside"/> -->
</LinearLayout>