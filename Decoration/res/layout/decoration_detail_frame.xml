           <FrameLayout 
               android:id="@+id/detail_bottom"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/detail_bottom"> 
               <LinearLayout 
                   android:id="@+id/praise_frame"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/detail_btn_bg"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/praise"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/detail_praise"
                       />
                  <TextView 
                      android:id="@+id/praise_num"
                      android:layout_marginLeft="5dp"
                    android:text="喜欢"
                     android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"/>
               </LinearLayout>
                <LinearLayout 
                   android:id="@+id/comment_frame"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:background="@drawable/detail_btn_bg"
                   android:orientation="horizontal">
                   <ImageView
                        android:id="@+id/comment" 
                    android:src="@drawable/detail_comment_bgx"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                      
                       />
                  <TextView 
                      android:id="@+id/comment_txt"
                      android:layout_marginLeft="5dp"
                    android:text="评论"
                     android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"/>
               </LinearLayout>
                <LinearLayout 
                   android:id="@+id/more_frame"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:gravity="center"
                   android:background="@drawable/detail_btn_bg"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/more"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/detail_more_bgx"
                       />
                  <TextView 
                      android:id="@+id/more_num"
                      android:layout_marginLeft="5dp"
                    android:text="更多"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"/>
               </LinearLayout>
               
           </FrameLayout>
         
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               android:layout_gravity="bottom"
               android:id="@+id/comment_container"
               >
              <ImageView 
                   android:id="@+id/detail_bottom_bg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/detail_bottom"/>
               <ImageView 
                   android:id="@+id/avatar_com"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/de_avatar"/>
               <LinearLayout
                   android:id="@+id/edit_com_linear"
                    android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
               <EditText 
                   android:id="@+id/edit_com"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="10dp"
                   android:hint="写评论"
                   android:textSize="14sp"
                   android:background="#0fff"/>
               <ImageView 
                   android:id="@+id/edit_bottomline"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/detail_comment_edit"/>
               </LinearLayout>
               <LinearLayout 
                   android:id="@+id/comment_send"
                   android:gravity="center"
                   android:background="@drawable/detail_btn_bg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                  <ImageView
                       android:id="@+id/send"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/detail_send"
                       />
                  <TextView 
                      android:id="@+id/more_num"
                      android:layout_marginLeft="5dp"
                    android:text="发送"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"/>
               </LinearLayout>
           </FrameLayout>
